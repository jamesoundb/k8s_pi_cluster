! /etc/keepalived/keepalived.conf
! Configuration File for keepalived

global_defs {
   router_id LVS_DEVEL
   script_user root
   enable_script_security
}

vrrp_script check_apiserver {
   script "/etc/keepalived/check_apiserver.sh"
   interval 3
   weight -2
   fall 10
   rise 2
}

vrrp_instance VI_1 {
    state {{ 'MASTER' if inventory_hostname == groups['k8s_master'][0] else 'BACKUP' }}
    interface {{ network_interface | default('eth0') }}
    virtual_router_id 51
    priority {{ 100 if inventory_hostname == groups['k8s_master'][0] else 90 }}
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass {{ keepalived_auth_pass }}
    }
    virtual_ipaddress {
        {{ control_plane_endpoint }}
    }
    track_script {
        check_apiserver
    }
}
